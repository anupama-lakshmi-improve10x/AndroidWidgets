<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CustomAlertDialogActivity">

    <TextView
        android:id="@+id/message_text_txt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Click here to display Dialog Box"
        android:textAlignment="center"
        android:textColor="#0C0C0C"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/click_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Click"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="@+id/message_text_txt"
        app:layout_constraintHorizontal_bias="0.461"
        app:layout_constraintStart_toStartOf="@+id/message_text_txt"
        app:layout_constraintTop_toBottomOf="@+id/message_text_txt" />
</androidx.constraintlayout.widget.ConstraintLayout>